{
    "schema": {
        "reconfix": {
            "targets": {
                "file1": {
                    "type": "file",
                    "format": "json",
                    "location": {
                        "partition": 0,
                        "path": "/file1"
                    }
                }
            }
        },
        "properties": {
            "feature1": {
                "properties": {
                    "enable": {
                        "reconfix": {
                            "transforms": [
                                {
                                    "map": [
                                        [true, {
                                            "properties":{
                                                "enabled": { "const": "Yep"},
                                                "extra": { "const": "data"},
                                                "parameter": { "type": "string" }
                                            }
                                        }],
                                        [false, {
                                            "properties": {
                                                "enabled": { "const": "Nope"}
                                            }
                                        }]
                                    ],
                                    "output": {
                                        "target": "file1",
                                        "path": "/wetfeature1"
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "feature2": {
                "properties": {
                    "enable": {
                        "reconfix": {
                            "transforms": [
                                {
                                    "map": [
                                        [true, {
                                            "properties":{
                                                "enabled": { "const": "Yep"},
                                                "extra": { "const": "data"},
                                                "parameter": { "type": "string" }
                                            }
                                        }],
                                        [false, {
                                            "properties": {
                                                "enabled": { "const": "Nope"}
                                            }
                                        }]
                                    ],
                                    "output": {
                                        "target": "file1",
                                        "path": "/wetfeature2"
                                    }
                                }
                            ]
                        }
                    },
                    "parameter": {
                        "type": "string",
                        "reconfix": {
                            "transforms": [
                                {
                                    "output": {
                                        "target": "file1",
                                        "path": "/wetfeature2/parameter"
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "dry": {
        "feature1": {
            "enable": false
        },
        "feature2": {
            "enable": true,
            "parameter": "foobar"
        }
    },
    "wet": {
        "/file1": {
            "wetfeature1": {
                "enabled": "Nope"
            },
            "wetfeature2": {
                "enabled": "Yep",
                "extra": "data",
                "parameter": "foobar"
            }
        }
    }
}