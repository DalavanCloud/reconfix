{
    "version": "2.0.0",
    "command": "cargo",
    "problemMatcher": "$rustc",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "showReuseMessage": false,
        "panel": "shared",
        "focus": false
    },
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build --lib",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build CLI",
            "type": "shell",
            "command": "cargo build --bins",
            "group": "build"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cargo clean",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "cargo test --lib",
            "group": {
                "kind": "test",
                "isDefault": true,
            }
        },
        {
            "label": "Clippy",
            "type": "shell",
            "command": "cargo clean -p reconfix && cargo clippy",
        },
        {
            "label": "Reformat",
            "type": "shell",
            "command": "cargo fmt",
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
